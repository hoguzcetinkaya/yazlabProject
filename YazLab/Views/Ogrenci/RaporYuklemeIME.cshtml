

@model YazLab.Models.BasvuruModel.Ime
@{
    ViewBag.Title = "ImeRaporyukleme";
    Layout = "~/Views/Shared/_Ogrenci.cshtml";
}

<h2>Staj1</h2>

<div class="content-wrapper">
    <div class="col-md-9">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Rapor Ekle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->

            @using (Html.BeginForm("RaporYuklemeIME", "Ogrenci", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <input class="control-label " type="file" name="OgrenciPdf" value="Rapor yükleme" />

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kayıt Ekle</button>
                </div>
            }
        </div>
    </div>

</div>