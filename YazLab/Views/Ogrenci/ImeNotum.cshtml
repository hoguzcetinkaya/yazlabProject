@model IEnumerable<YazLab.Models.BasvuruModel.Ime>
@{
    ViewBag.Title = "İME Notum";
    Layout = "~/Views/Shared/_Ogrenci.cshtml";
}


@using (Html.BeginForm())
{


    <div class="content-wrapper">

        <section class="content">
            <div class="container-fluid">

                <div class="row">
                    <!-- Left col -->
                    <section class="col-lg-7 connectedSortable">

                        <table class="table" style="width:65rem; margin:auto">

                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Ad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Soyad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImeDonem)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImeBaslangicTarihi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImeBitisTarihi)
                                </th>
                                <th>
                                    IME Başvurum
                                </th>
                                <th>Not</th>
                            </tr>

                            @foreach (var item in Model)
                            {

                                <tr>

                                    <td>
                                        @item.Ad
                                    </td>
                                    <td>
                                        @item.Soyad
                                    </td>
                                    <td>
                                        @item.ImeDonem
                                    </td>
                                    <td>
                                        @item.ImeBaslangicTarihi
                                    </td>
                                    <td>
                                        @item.ImeBitisTarihi
                                    </td>
                                    <td>
                                        @Html.ActionLink("IME Başvurum", "ImeBasvurumPDF", "Ogrenci", new { id = item.Id }, new { @class = "btn btn-info" })
                                    </td>
                                    <td>
                                        @item.ImeNot

                                    </td>
                                </tr>

                            }
                        </table>
                    </section>
                    <!-- /.Left col -->
                    <!-- right col (We are only adding the ID to make the widgets sortable)-->
                    <section class="col-lg-5 connectedSortable">
                    </section>
                    <!-- right col -->
                </div>
                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
}