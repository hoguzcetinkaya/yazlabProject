@model IEnumerable<YazLab.Identity.ApplicationUser>
@{
    ViewBag.Title = "SorumluOldugumOgrenciler";
    Layout = "~/Views/Shared/_Ogretmen.cshtml";
}


<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-7 connectedSortable">
                    @if (TempData["hata"]!=null)
            {
                <p class="alert alert-danger" id="successMessage">@TempData["hata"]</p>
            }

                    <table class="table" style="width:65rem; margin:auto">
                        <tr>
                            <th>
                                Ad
                            </th>
                            <th>
                                Soyad
                            </th>
                            <th>
                                E-Posta
                            </th>
                            <th>
                                Okul Numarası
                            </th>
                            <th>Staj1 Bilgi</th>
                            <th>Staj2 Bilgi</th>
                            <th>İME Bilgi</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Surname
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.OkulNumara
                                </td>
                                <td>
                                    @Html.ActionLink("Durum", "OgrenciStaj1Bilgi", new { id = item.UserName }, new { @class = "btn btn-info" })
                                </td>
                                <td>
                                    @Html.ActionLink("Durum", "OgrenciStaj2Bilgi", new { id = item.UserName }, new { @class = "btn btn-info" })
                                </td>
                                <td>
                                    @Html.ActionLink("Durum", "OgrenciIMEBilgi", new { id = item.UserName }, new { @class = "btn btn-info" })
                                </td>
                            </tr>
                        }
                    </table>
                </section>
                
            </div>
        </div>
    </section>
</div>