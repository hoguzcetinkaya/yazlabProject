@model YazLab.Models.KullaniciEkleme
@{
    ViewBag.Title = "OgretmenListesi";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->

            <div class="row">
                <h1>Öğretmen rolüne sahip kullanıcılar!!</h1>
                <!-- ./col -->
            </div>

            <div class="row">

                <!-- ./col -->
            </div>
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-7 connectedSortable">

                    <table class="table" style="width:65rem; margin:auto">
                        <tr>

                            <th>
                                Ad
                            </th>
                            <th>
                                Soyad
                            </th>
                            <th>
                                E-Posta
                            </th>
                            <th>
                                Okul Numarası
                            </th>


                            <th>
                                Öğrenci Atama
                            </th>
                        </tr>

                        @foreach (var item in Model.OgretmenOlanlar)
                        {
                            <tr>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Surname
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.OkulNumara
                                </td>
                                <td>
                                    @Html.ActionLink("Öğrenci Ata", "OgrenciAtamaOgretmen","Admin", new { id = item.Id }, new { @class = "btn btn-success" })
                                </td>

                            </tr>
                        }

                    </table>
                </section>
                <!-- /.Left col -->
                <!-- right col (We are only adding the ID to make the widgets sortable)-->
                
                <!-- right col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


