@model YazLab.Models.Giris
@{
    ViewBag.Title = "Öğretmen Giriş";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kullanıcı Girişi | STAJ/IME TAKİP SİSTEMİ </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>ÖĞRETMEN</b> GİRİŞİ</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <p class="login-box-msg">Sisteme kullanıcı adınız (numaranız) ile giriş yapınız.</p>

                    <form>
                        <div class="input-group mb-3">
                            @Html.LabelFor(x => x.UserName, htmlAttributes: new { @class = "control-label col-md-12" })
                            @*<input type="email" class="form-control" placeholder="Email">*@
                            <div class="input-group-append" style="margin:auto;">
                                @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="input-group-text">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">
                            @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label col-md-12" })

                            <div class="input-group-append" style="margin:auto;">
                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="input-group-text">
                                    <i class="fa-solid fa-lock"></i>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">
                                    Giriş Yap
                                    <i class="fa-solid fa-arrow-right-to-bracket" style="margin-left: 10px;"></i>

                                </button>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.col -->

                    </form>
                </div>

            }

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Content/dist/js/adminlte.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://kit.fontawesome.com/855382d270.js" crossorigin="anonymous"></script>
</body>
</html>